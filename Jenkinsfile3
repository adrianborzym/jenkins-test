pipeline{
    agent{
        label "any"
    }
    environment {
        RELEASE='20.04'
    }
    stages {
        stage('Build')
        {
            environment {
                LOG_LEVEL='INFO'
            }
            steps {
                echo "Building release $RELEASE and log_level $LOG_LEVEL"
            }
        }
        stage('Test'){
            steps {
                echo "Testing release ${env.RELEASE}"
                writeFile file: 'test-results.txt', text: "passed"
            }
        }
    }
    post {
        success {
            archiveArtifacts 'test-results.txt'
        }
    }

}
